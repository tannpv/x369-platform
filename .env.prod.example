# Production Environment Configuration
# Copy this file to .env.prod and customize values for your production environment

# Project Configuration
COMPOSE_PROJECT_NAME=carrental-prod

# Database Configuration
POSTGRES_USER=carrental_user
POSTGRES_PASSWORD=your-super-secure-database-password-change-this
POSTGRES_DB=carrental_production

# Redis Configuration
REDIS_PASSWORD=your-super-secure-redis-password-change-this

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long
CORS_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

# Email Configuration (for notifications)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@yourdomain.com

# Monitoring Configuration
GRAFANA_PASSWORD=your-grafana-admin-password

# Performance Configuration
LOG_LEVEL=info
RATE_LIMIT=1000

# Domain Configuration (for SSL certificates)
DOMAIN=yourdomain.com
ADMIN_DOMAIN=admin.yourdomain.com
API_DOMAIN=api.yourdomain.com

# SSL Configuration
SSL_EMAIL=admin@yourdomain.com

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
